<%= form_with(model: car_make) do |form| %>
  <% if car_make.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car_make.errors.count, "error") %> prohibited this car make from being saved:</h2>

      <ul>
      <% car_make.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :make, class: 'form-label' %>
    <%= form.text_field :make, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :website, class: 'form-label' %>
    <%= form.text_field :website, class: 'form-control' %>
  </div>

  <% if current_user.user_type.name == "Admin" %>
    <div class="mb-3">
      <% if car_make.persisted? %>
        <div class="float-end">
          <%= link_to 'Destroy', car_make, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      <% end %>

      <%= form.submit class: 'btn btn-primary text-capitalize' %>

      <% if car_make.persisted? %>
        <%= link_to "Cancel", car_make, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "Cancel", car_makes_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  <% end %>
<% end %>
