      <ul>
      <% car_make.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :make, class: 'form-label' %>
    <%= form.text_field :make, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :website, class: 'form-label' %>
    <%= form.text_field :website, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if car_make.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', car_make, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if car_make.persisted? %>
      <%= link_to "Cancel", car_make, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", car_makes_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
