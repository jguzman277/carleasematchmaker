


<div class="row">
  <div class="col-sm-6">
    <h1>Car Makes</h1>
  </div>
    <% if current_user.user_type.name == "Admin" %>
      <div class="col-sm-6 text-end">
        <%= link_to new_car_make_path, class: 'btn btn-primary' do %>
          Add New Car Make
        <% end %>
      </div>
    <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Make</th>
        <th>Website</th>
      </tr>
    </thead>

    <tbody>
      <% @car_makes.each do |car_make| %>
        <%= content_tag :tr, id: dom_id(car_make), class: dom_class(car_make) do %>
          <td><%= link_to car_make.make, car_make %></td>
          <td><%= car_make.website %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
