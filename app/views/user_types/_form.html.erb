<%= form_with(model: user_type) do |f| %>

    <% if user_type.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(@user_type.errors.count, "error") %> prohibited this user type from being saved:</h2>

            <ul>
                <% @user_type.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <form>
        <div class="mb-3">
            <%= f.label "User Type:", class: "form-label text-capitalize" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <% if user_type.persisted? %>
            <div class="float-end mb-3">
                <%= link_to 'Destroy', user_type, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
            </div>
        <% end %>

        <div class="mb-3">
            <%= f.submit "Save", class: "btn btn-primary" %>
            <%= link_to "Cancel", user_types_path, class: "btn btn-secondary" %>
        </div>
    </form>
<% end %>